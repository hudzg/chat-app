<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Ảnh đại diện người gọi -->
    <ImageView
    android:id="@+id/caller_image"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:src="@android:drawable/ic_menu_gallery" />

    <!-- Tên người gọi -->
    <TextView
        android:id="@+id/caller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/caller_image"
        android:layout_centerHorizontal="true"
        android:text="Unknown Caller"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <!-- Nút Chấp nhận -->
    <Button
    android:id="@+id/accept_button"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:layout_margin="20dp"
    android:background="@android:drawable/ic_menu_call"
    android:layout_toLeftOf="@id/decline_button" />

    <!-- Nút Từ chối -->
    <Button
    android:id="@+id/decline_button"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:layout_margin="20dp"
    android:background="@android:drawable/ic_menu_close_clear_cancel"
    android:layout_centerHorizontal="true" />
</RelativeLayout>